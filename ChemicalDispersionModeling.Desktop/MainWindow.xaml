<Window x:Class="ChemicalDispersionModeling.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChemicalDispersionModeling.Desktop"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Chemical Dispersion Modeling" Height="900" Width="1400" 
        WindowState="Maximized">
    
    <Grid>
        <Grid.RowDefinitions>
            <!-- Menu Bar -->
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="Auto"/>
            <!-- Main Content -->
            <RowDefinition Height="*"/>
            <!-- Status Bar -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#F0F0F0">
            <MenuItem Header="_File">
                <MenuItem Header="_New Project" Command="{Binding NewProjectCommand}"/>
                <MenuItem Header="_Open Project..." Command="{Binding OpenProjectCommand}"/>
                <MenuItem Header="_Save Project" Command="{Binding SaveProjectCommand}"/>
                <MenuItem Header="Save Project _As..." Command="{Binding SaveProjectAsCommand}"/>
                <Separator/>
                <MenuItem Header="_Import GIS Data..." Command="{Binding ImportGisDataCommand}"/>
                <MenuItem Header="_Export Results..." Command="{Binding ExportResultsCommand}"/>
                <Separator/>
                <MenuItem Header="_Exit" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Chemical Database..." Command="{Binding EditChemicalDatabaseCommand}"/>
                <MenuItem Header="_Weather Settings..." Command="{Binding EditWeatherSettingsCommand}"/>
                <MenuItem Header="_Preferences..." Command="{Binding EditPreferencesCommand}"/>
            </MenuItem>
            <MenuItem Header="_Modeling">
                <MenuItem Header="_Run Dispersion Model" Command="{Binding RunModelCommand}"/>
                <MenuItem Header="_Clear Results" Command="{Binding ClearResultsCommand}"/>
                <MenuItem Header="_Model Settings..." Command="{Binding ModelSettingsCommand}"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Zoom to Fit" Command="{Binding ZoomToFitCommand}"/>
                <MenuItem Header="_Center on Release" Command="{Binding CenterOnReleaseCommand}"/>
                <MenuItem Header="Toggle _3D Buildings" Command="{Binding Toggle3DBuildingsCommand}"/>
                <MenuItem Header="Toggle _Receptors" Command="{Binding ToggleReceptorsCommand}"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_User Guide" Command="{Binding ShowUserGuideCommand}"/>
                <MenuItem Header="_About" Command="{Binding ShowAboutCommand}"/>
            </MenuItem>
        </Menu>
        
        <!-- Toolbar -->
        <ToolBar Grid.Row="1" Background="#F8F8F8">
            <Button Command="{Binding NewProjectCommand}" ToolTip="New Project">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📄" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="New"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding OpenProjectCommand}" ToolTip="Open Project">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📂" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Open"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding SaveProjectCommand}" ToolTip="Save Project">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="💾" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Save"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button Command="{Binding RunModelCommand}" ToolTip="Run Dispersion Model">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🚀" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Run Model"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding ClearResultsCommand}" ToolTip="Clear Results">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🗑️" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Clear"/>
                </StackPanel>
            </Button>
            <Separator/>
            <TextBlock Text="Weather Source:" VerticalAlignment="Center" Margin="5,0"/>
            <ComboBox Width="120" SelectedItem="{Binding SelectedWeatherSource}" Margin="0,0,10,0">
                <ComboBoxItem Content="NWS API"/>
                <ComboBoxItem Content="OpenMeteo"/>
                <ComboBoxItem Content="Local Station"/>
            </ComboBox>
            <TextBlock Text="Auto Update:" VerticalAlignment="Center" Margin="5,0"/>
            <CheckBox IsChecked="{Binding AutoUpdateEnabled}" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Text="{Binding LastUpdateTime, StringFormat=HH:mm:ss}" VerticalAlignment="Center" Margin="5,0"/>
        </ToolBar>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <!-- Left Panel - Release Configuration -->
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="5"/>
                <!-- Center Panel - Map -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <!-- Right Panel - Results -->
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel -->
            <GroupBox Grid.Column="0" Header="Release Configuration" Margin="5">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <!-- Release Point -->
                        <GroupBox Header="Release Point" Margin="0,0,0,10">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Latitude:" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ReleaseLatitude}" Margin="5"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Longitude:" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ReleaseLongitude}" Margin="5"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Height (m):" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding ReleaseHeight}" Margin="5"/>
                                
                                <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Content="📍 Click on Map to Select" Command="{Binding SelectLocationOnMapCommand}" Margin="0,5"/>
                            </Grid>
                        </GroupBox>
                        
                        <!-- Chemical Selection -->
                        <GroupBox Header="Chemical" Margin="0,0,0,10">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <ComboBox Grid.Row="0" ItemsSource="{Binding AvailableChemicals}" 
                                         SelectedItem="{Binding SelectedChemical}" 
                                         DisplayMemberPath="Name" Margin="0,5"/>
                                         
                                <Button Grid.Row="1" Content="➕ Add New Chemical" Command="{Binding AddChemicalCommand}" Margin="0,5"/>
                                
                                <TextBlock Grid.Row="2" Text="{Binding SelectedChemical.Description}" 
                                          TextWrapping="Wrap" FontSize="10" Foreground="Gray" Margin="0,5"/>
                            </Grid>
                        </GroupBox>
                        
                        <!-- Release Parameters -->
                        <GroupBox Header="Release Parameters" Margin="0,0,0,10">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Type:" VerticalAlignment="Center" Margin="0,5"/>
                                <ComboBox Grid.Row="0" Grid.Column="1" SelectedItem="{Binding ReleaseType}" Margin="5">
                                    <ComboBoxItem Content="Instantaneous"/>
                                    <ComboBoxItem Content="Continuous"/>
                                    <ComboBoxItem Content="Variable"/>
                                </ComboBox>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Scenario:" VerticalAlignment="Center" Margin="0,5"/>
                                <ComboBox Grid.Row="1" Grid.Column="1" SelectedItem="{Binding ReleaseScenario}" Margin="5">
                                    <ComboBoxItem Content="Gas"/>
                                    <ComboBoxItem Content="Liquid Pool"/>
                                    <ComboBoxItem Content="Fire"/>
                                    <ComboBoxItem Content="Explosion"/>
                                    <ComboBoxItem Content="Pressurized Release"/>
                                </ComboBox>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Rate (kg/s):" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding ReleaseRate}" Margin="5"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Duration (min):" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding ReleaseDuration}" Margin="5"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Total Mass (kg):" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding TotalMass}" Margin="5"/>
                            </Grid>
                        </GroupBox>
                        
                        <!-- Weather Information -->
                        <GroupBox Header="Current Weather" Margin="0,0,0,10">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Wind Speed:" VerticalAlignment="Center" Margin="0,2"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentWeather.WindSpeed, StringFormat=F1}" Margin="5,2"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Wind Direction:" VerticalAlignment="Center" Margin="0,2"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentWeather.WindDirection, StringFormat=F0}" Margin="5,2"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Temperature:" VerticalAlignment="Center" Margin="0,2"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentWeather.Temperature, StringFormat=F1}" Margin="5,2"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Stability Class:" VerticalAlignment="Center" Margin="0,2"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentWeather.StabilityClass}" Margin="5,2"/>
                                
                                <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Content="🔄 Refresh Weather" Command="{Binding RefreshWeatherCommand}" Margin="0,5"/>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="LightGray"/>
            
            <!-- Center Panel - Map -->
            <GroupBox Grid.Column="2" Header="Map View" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Map Controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <Button Content="🏠" ToolTip="Zoom to Home" Command="{Binding ZoomToHomeCommand}" Margin="2"/>
                        <Button Content="🔍+" ToolTip="Zoom In" Command="{Binding ZoomInCommand}" Margin="2"/>
                        <Button Content="🔍-" ToolTip="Zoom Out" Command="{Binding ZoomOutCommand}" Margin="2"/>
                        <Button Content="📍" ToolTip="Center on Release" Command="{Binding CenterOnReleaseCommand}" Margin="2"/>
                        <Separator/>
                        <CheckBox Content="Show Plume" IsChecked="{Binding ShowPlume}" VerticalAlignment="Center" Margin="5"/>
                        <CheckBox Content="Show Receptors" IsChecked="{Binding ShowReceptors}" VerticalAlignment="Center" Margin="5"/>
                        <CheckBox Content="Show Buildings" IsChecked="{Binding ShowBuildings}" VerticalAlignment="Center" Margin="5"/>
                        <CheckBox Content="Show Topography" IsChecked="{Binding ShowTopography}" VerticalAlignment="Center" Margin="5"/>
                    </StackPanel>
                    
                    <!-- Map Container -->
                    <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="2" Margin="5" CornerRadius="5" Name="MapContainer">
                        <Grid>
                            <!-- WebView2 for real mapping -->
                            <wv2:WebView2 Name="MapWebView" 
                                         Source="about:blank"/>
                            
                            <!-- Loading overlay (initially visible) -->
                            <Border Name="MapLoadingOverlay" 
                                    Background="#80000000" 
                                    Visibility="Visible">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="⏳ Initializing Real Mapping..." 
                                               Foreground="White" 
                                               FontSize="16" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="OpenStreetMap" 
                                               Foreground="LightGray" 
                                               FontSize="12" 
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </GroupBox>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch" Background="LightGray"/>
            
            <!-- Right Panel - Results -->
            <GroupBox Grid.Column="4" Header="Results and Receptors" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Receptors -->
                    <GroupBox Grid.Row="0" Header="Receptors" Margin="0,0,0,2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                                <Button Content="➕ Add" Command="{Binding AddReceptorCommand}" Margin="2"/>
                                <Button Content="❌ Remove" Command="{Binding RemoveReceptorCommand}" Margin="2"/>
                                <Button Content="📍 Auto-Generate" Command="{Binding AutoGenerateReceptorsCommand}" Margin="2"/>
                            </StackPanel>
                            
                            <DataGrid Grid.Row="1" ItemsSource="{Binding Receptors}" 
                                     SelectedItem="{Binding SelectedReceptor}"
                                     AutoGenerateColumns="False" Margin="5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="80"/>
                                    <DataGridTextColumn Header="Lat" Binding="{Binding Latitude, StringFormat=F4}" Width="60"/>
                                    <DataGridTextColumn Header="Lon" Binding="{Binding Longitude, StringFormat=F4}" Width="60"/>
                                    <DataGridTextColumn Header="Type" Binding="{Binding ReceptorType}" Width="70"/>
                                    <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="50"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Splitter -->
                    <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="LightGray"/>
                    
                    <!-- Results -->
                    <GroupBox Grid.Row="2" Header="Dispersion Results" Margin="0,2,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                                <TextBlock Text="Max Concentration:" VerticalAlignment="Center" Margin="2"/>
                                <TextBlock Text="{Binding MaxConcentration, StringFormat=F2}" 
                                          VerticalAlignment="Center" FontWeight="Bold" Foreground="Red" Margin="2"/>
                            </StackPanel>
                            
                            <DataGrid Grid.Row="1" ItemsSource="{Binding DispersionResults}" 
                                     SelectedItem="{Binding SelectedResult}"
                                     AutoGenerateColumns="False" Margin="5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Receptor" Binding="{Binding Receptor.Name}" Width="80"/>
                                    <DataGridTextColumn Header="Conc." Binding="{Binding Concentration, StringFormat=F3}" Width="60"/>
                                    <DataGridTextColumn Header="Unit" Binding="{Binding ConcentrationUnit}" Width="50"/>
                                    <DataGridTextColumn Header="Risk" Binding="{Binding RiskLevel}" Width="50"/>
                                    <DataGridTextColumn Header="Distance" Binding="{Binding DistanceFromSource, StringFormat=F0}" Width="60"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <StackPanel Grid.Row="2" Margin="5">
                                <Button Content="📊 Export Results" Command="{Binding ExportResultsCommand}" Margin="2"/>
                                <Button Content="📈 Show Graphs" Command="{Binding ShowGraphsCommand}" Margin="2"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>
            </GroupBox>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Background="#F0F0F0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" Margin="5,0"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Database: " Margin="5,0"/>
                    <TextBlock Text="{Binding DatabaseStatus}" Margin="0,0,10,0"/>
                    <TextBlock Text="Weather: " Margin="5,0"/>
                    <TextBlock Text="{Binding WeatherStatus}" Margin="0,0,10,0"/>
                    <TextBlock Text="Model: " Margin="5,0"/>
                    <TextBlock Text="{Binding ModelStatus}" Margin="0,0,5,0"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
